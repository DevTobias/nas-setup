################################################################
# Global configuration
################################################################

# Enable ping feature for docker health checks
ping: {}

global:
  # Don't send telemetry data to traefik
  sendAnonymousUsage: false

################################################################
# EntryPoints configuration
################################################################

entryPoints:
  web:
    address: :80
    http:
      redirections:
        entrypoint:
          to: websecure
          scheme: https
          permanent: true
  websecure:
    address: :443
    http:
      tls: {}
  dns_tls:
    address: :853

http:
  routers:
    nas-redirect:
      entryPoints:
        - websecure
      rule: Host(`{{ nas_domain }}`)
      service: service_nas
  services:
    service_nas:
      loadBalancer:
        servers:
          - url: "{{ nas_endpoint }}"

################################################################
# TLS / API configuration
################################################################

tls:
  certificates:
    - certFile: "/certs/{{ ssl_certfile }}"
      keyFile: "/certs/{{ ssl_keyfile }}"

api:
  dashboard: true

################################################################
# Docker configuration backend
################################################################

providers:
  docker: {}
  file:
    directory: /etc/traefik
    watch: true
