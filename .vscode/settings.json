{
  // !Editor settings
  "cSpell.language": "en,de-de",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "terminal.integrated.gpuAcceleration": "off",

  //! Explorer
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    // General nestings
    "README.md": "LICENSE",
    "Taskfile.yml": ".gitignore,.editorconfig",
    "package.json": ".gitignore,tsconfig.json,pnpm-workspace.yaml,.env.local,bun.lockb",
    // Python nestings
    "ansible.cfg": "inventory.yml,requirements.yml",
    "pyproject.toml": "poetry.lock,poetry.toml",
    "main.py": "autorip.toml",
    // React / Vite nestings
    "vite.config.ts": "index.html,postcss.config.js,tailwind.config.js"
  },

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true,
    "**/.venv": true,
    "stream_bot": true,
    "media_bot": true,
    "autorip-web": true,
    "ansible": true
  },

  //! Python
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "strict",
  "python.languageServer": "Pylance",
  "ruff.organizeImports": true,
  "pylint.args": [
    "--disable=missing-module-docstring",
    "--disable=missing-class-docstring",
    "--disable=missing-function-docstring",
    "--disable=wrong-import-order",
    "--disable=useless-import-alias",
    "--disable=too-many-instance-attributes"
  ],
  "python.defaultInterpreterPath": "~/AppData/Local/pypoetry/Cache/virtualenvs/autorip-GWbqsLle-py3.12/Scripts/python.exe",
  "python.analysis.extraPaths": [
    "autorip",
    "autorip/autorip",
    "autorip/autorip/ripper",
    "autorip/autorip/process",
    "autorip/autorip/config",
    "autorip/autorip/logger",
    "autorip/autorip/utils"
  ],
  "python.analysis.diagnosticSeverityOverrides": {},

  // Typescript
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",

  // CSS
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },

  // Eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    "autorip/autorip-web/frontend",
    "stream_bot/discord",
    "media_bot/discord"
  ],

  //! Formatters
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[json][jsonc][html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript][javascript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "hide-files.files": ["stream_bot", "media_bot", "autorip-web", "ansible"]
}
